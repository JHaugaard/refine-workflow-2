{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "project-foundation.schema.json",
  "title": "Project Foundation",
  "description": "Project foundation handoff produced by project-spinup skill",
  "type": "object",
  "required": ["document_type", "project", "created_by", "spinup_approach", "files_created"],
  "properties": {
    "document_type": {
      "type": "string",
      "const": "project-foundation"
    },
    "project": {
      "type": "string",
      "minLength": 1
    },
    "created_by": {
      "type": "string",
      "const": "project-spinup"
    },
    "spinup_approach": {
      "type": "string",
      "enum": ["guided", "quick-start"]
    },
    "tech_stack": {
      "type": "object",
      "description": "Summary of tech stack from upstream handoff",
      "properties": {
        "frontend": { "type": "string" },
        "backend": { "type": "string" },
        "database": { "type": "string" },
        "styling": { "type": "string" }
      }
    },
    "deployment_target": {
      "type": "string",
      "description": "Summary of deployment target from upstream handoff"
    },
    "files_created": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of files generated by project-spinup"
    },
    "directories_created": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of directories created"
    },
    "docker_services": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Services defined in docker-compose.yml"
    },
    "environment_variables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "required": { "type": "boolean" }
        }
      }
    },
    "next_steps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Guided next steps for the user"
    },
    "commands": {
      "type": "object",
      "description": "Key commands for development",
      "properties": {
        "start": { "type": "string" },
        "test": { "type": "string" },
        "build": { "type": "string" },
        "lint": { "type": "string" }
      }
    }
  }
}
